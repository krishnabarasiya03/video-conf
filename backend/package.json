{
  "name": "video-conf-backend",
  "version": "1.0.0",
  "description": "Production-ready Node.js backend for video conferencing platform using mediasoup SFU and Socket.IO",
  "main": "src/server.js",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest"
  },
  "keywords": [
    "video-conferencing",
    "mediasoup",
    "socket.io",
    "firebase",
    "sfu",
    "webrtc"
  ],
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.5",
    "mediasoup": "^3.13.6",
    "firebase-admin": "^12.0.0",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "uuid": "^9.0.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ]
  },
  "author": "Krishna Barasiya",
  "license": "MIT"
}